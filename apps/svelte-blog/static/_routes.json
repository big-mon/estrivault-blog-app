{
  "version": 1,
  "description": "Cloudflare Pages routing configuration for optimal static/dynamic separation",
  "include": [
    "/sitemap.xml",
    "/llms.txt",
    "/llms-full.txt",
    "/[0-9]*",
    "/category/*/*",
    "/tag/*/*",
    "/api/*"
  ],
  "exclude": [
    "/post/*",
    "/category/*/1",
    "/",
    "*.js",
    "*.css",
    "*.svg",
    "*.png",
    "*.jpg",
    "*.jpeg",
    "*.webp",
    "*.ico"
  ]
}
