{
  "name": "estrivault-blog-app",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "node scripts/dev-helper.js",
    "build": "pnpm -r --filter svelte-blog... run build",
    "deploy": "wrangler deploy",
    "build:packages": "pnpm --filter @estrivault/cloudinary-utils --filter @estrivault/content-processor run build",
    "dev:packages": "pnpm --filter @estrivault/cloudinary-utils run dev",
    "validate:workspace": "node scripts/validate-workspace.js",
    "postinstall": "pnpm run build:packages",
    "clean": "pnpm --filter @estrivault/cloudinary-utils --filter @estrivault/content-processor run clean",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "pnpm run type-check:packages && pnpm --filter svelte-blog check",
    "type-check:packages": "pnpm --filter @estrivault/cloudinary-utils --filter @estrivault/content-processor exec tsc --noEmit",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.0",
    "@eslint/js": "^9.29.0",
    "concurrently": "^9.2.0",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-svelte": "^3.9.3",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.0",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.0",
    "wrangler": "^4.22.0"
  },
  "lint-staged": {
    "**/*.{js,ts,svelte}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{json,md,css,scss}": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
